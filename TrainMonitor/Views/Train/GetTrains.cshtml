@model List<TrainViewModel>

@{
    Layout = "_Layout";
}

<h1 class="mb-4">@ViewBag.Title</h1>


<div id="train-table" class="border-bottom">
    <!-- Header -->
    <div class="row bg-dark font-weight-bold py-2 text-white">
        <div class="col-1">#</div>
        <div class="col-3">Name</div>
        <div class="col-2">Number</div>
        <div class="col-2">Delay Time</div>
        <div class="col-2">Next Station</div>
        <div class="col-2">Last Update</div>
    </div>

    <!-- Rows -->
    <span class="row py-2 text-decoration-none text-dark bg-grey-light border-end border-start">
        <div class="col-1">1</div>
        <div class="col-3">Mark</div>
        <div class="col-2">Otto</div>
        <div class="col-2">mdo</div>
        <div class="col-2">mdo</div>
        <div class="col-2">mdo</div>
    </span>

    <a href="@Url.Action("Details", "Train", new { id = 2 })" class="row py-2 text-decoration-none text-white bg-danger">
        <div class="col-1">2</div>
        <div class="col-3">Jacob</div>
        <div class="col-2">Thornton</div>
        <div class="col-2">fat</div>
        <div class="col-2">mdo</div>
        <div class="col-2">mdo</div>
    </a>

    <span class="row py-2 text-decoration-none text-dark bg-grey-light border-end border-start">
        <div class="col-1">3</div>
        <div class="col-3">Larry</div>
        <div class="col-2">the Bird</div>
        <div class="col-2">twitter</div>
        <div class="col-2">mdo</div>
        <div class="col-2">mdo</div>
    </span>
</div>


